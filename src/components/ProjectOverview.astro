---
interface Props {
  title: string;
  timeline: string;
  description: string; // The "Background"
  highlights: string[]; // Key achievements
  tools: string[];      // e.g. ["Julia", "MPI"]
  links?: {
    paper?: string;
    code?: string;
    demo?: string;
  };
}

const { title, timeline, description, highlights, tools, links } = Astro.props;
---

<div class="max-w-7xl mx-auto px-6 py-20">
  
  <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
    
    <div class="md:col-span-8 p-8 rounded-3xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 shadow-sm flex flex-col justify-between">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <span class="px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-xs font-bold text-blue-600 dark:text-blue-400 uppercase tracking-wider">
            Project
          </span>
          <span class="text-slate-400 text-sm font-mono">{timeline}</span>
        </div>
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4">
          {title}
        </h2>
      </div>
      
      {links && (
        <div class="flex flex-wrap gap-4 mt-6">
          {links.paper && (
            <a href={links.paper} class="px-5 py-2 rounded-lg bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-bold text-sm hover:opacity-80 transition-opacity flex items-center gap-2">
              <span>üìÑ</span> Read Paper
            </a>
          )}
          {links.code && (
            <a href={links.code} class="px-5 py-2 rounded-lg border border-slate-300 dark:border-slate-700 text-slate-700 dark:text-slate-300 font-bold text-sm hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors flex items-center gap-2">
              <span>GitHub</span> Code
            </a>
          )}
        </div>
      )}
    </div>

    <div class="md:col-span-4 p-8 rounded-3xl bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700/50 shadow-sm flex flex-col justify-center">
      <h3 class="text-sm font-bold text-slate-500 dark:text-slate-400 uppercase tracking-widest mb-4">
        Main Tools
      </h3>
      <div class="flex flex-wrap gap-2">
        {tools.map(tool => (
          <span class="px-3 py-1.5 rounded-md bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 text-sm font-mono font-medium">
            {tool}
          </span>
        ))}
      </div>
    </div>

    <div class="md:col-span-7 p-8 rounded-3xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 shadow-sm">
      <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4 flex items-center gap-2">
        <span class="text-blue-500">‚ùñ</span> Background
      </h3>
      <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-lg">
        {description}
      </p>
    </div>

    <div class="md:col-span-5 p-8 rounded-3xl bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-100 dark:border-blue-800 shadow-sm">
      <h3 class="text-xl font-bold text-blue-700 dark:text-blue-400 mb-4 flex items-center gap-2">
        <span>‚ö°</span> Highlights
      </h3>
      <ul class="space-y-3">
        {highlights.map(item => (
          <li class="flex items-start gap-3">
            <span class="mt-1.5 h-1.5 w-1.5 rounded-full bg-blue-500 flex-shrink-0"></span>
            <span class="text-slate-700 dark:text-slate-300 font-medium">
              {item}
            </span>
          </li>
        ))}
      </ul>
    </div>

  </div>
</div>