---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Placeholder data (Replace with your actual photo paths)
const photos = [
  { src: "https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05", alt: "Nature", height: "h-64" },
  { src: "https://images.unsplash.com/photo-1447752875215-b2761acb3c5d", alt: "Forest", height: "h-96" },
  { src: "https://images.unsplash.com/photo-1472214103451-9374bd1c798e", alt: "Mountain", height: "h-80" },
  { src: "https://images.unsplash.com/photo-1501854140884-074bf86ed911", alt: "Sky", height: "h-72" },
  { src: "https://images.unsplash.com/photo-1441974231531-c6227db76b6e", alt: "Woods", height: "h-[500px]" },
  { src: "https://images.unsplash.com/photo-1469474968028-56623f02e42e", alt: "Alone", height: "h-64" },
];
---

<BaseLayout title="Photography">
  <div class="min-h-screen pt-32 pb-24 px-6">
    
    <div class="max-w-7xl mx-auto">
      <header class="mb-16">
        <h1 class="text-5xl font-bold text-slate-900 dark:text-white mb-4">Through the Lens</h1>
        <p class="text-xl text-slate-500">A collection of moments, frozen in time.</p>
      </header>

      <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6">
        
        {photos.map((photo) => (
          <div class="break-inside-avoid relative group rounded-2xl overflow-hidden cursor-zoom-in">
            <img 
              src={photo.src} 
              alt={photo.alt} 
              class="w-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            
            <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
              <span class="text-white font-medium text-sm translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                {photo.alt}
              </span>
            </div>
          </div>
        ))}

      </div>
      
    </div>
  </div>
</BaseLayout>