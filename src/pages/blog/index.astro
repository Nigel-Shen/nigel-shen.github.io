---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Personal Hub">
  <div class="min-h-screen py-24 px-6 bg-white dark:bg-slate-950">
    
    <div class="max-w-7xl mx-auto">
      
      <div class="mb-16">
        <h1 class="text-6xl md:text-6xl font-bold mb-6 text-slate-900 dark:text-white tracking-tight">
          The Lab <span class="text-blue-600 dark:text-blue-400">&</span> Life
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl">
          A collection of pixels, soundwaves, and thoughts.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        
        <a href="/blog/photography" class="group relative md:col-span-1 md:row-span-2 rounded-3xl overflow-hidden bg-slate-900 shadow-lg hover:shadow-2xl transition-all duration-500">
          
          <div class="absolute inset-0">
             <img 
               src="https://images.unsplash.com/photo-1492691527719-9d1e07e534b4?auto=format&fit=crop&w=800&q=80" 
               class="w-full h-full object-cover opacity-60 group-hover:opacity-40 transition-opacity duration-500"
               alt="Photography Background"
             />
             <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
          </div>
          
          <div class="relative z-10 p-8 h-full min-h-[500px] flex flex-col justify-end">
             <div class="translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
               <span class="inline-block px-3 py-1 mb-4 text-xs font-bold text-white bg-white/20 backdrop-blur-md rounded-full border border-white/10">
                 Gallery
               </span>
               <h2 class="text-4xl font-bold text-white mb-2">Photography</h2>
               <p class="text-slate-300 text-sm mb-6 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                 Landscapes, street photography, and moments frozen in time.
               </p>
               <div class="flex items-center gap-2 text-white font-bold text-sm">
