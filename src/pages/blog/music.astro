---
import BaseLayout from '../../layouts/BaseLayout.astro';

const albums = [
  { 
    title: "Random Access Memories", 
    artist: "Daft Punk", 
    rating: 5, 
    comment: "A masterclass in production. 'Touch' gives me chills every time.",
    cover: "https://upload.wikimedia.org/wikipedia/en/a/a7/Random_Access_Memories.jpg" 
  },
  { 
    title: "The Dark Side of the Moon", 
    artist: "Pink Floyd", 
    rating: 5, 
    comment: "The perfect album to code to. Flows like a single continuous thought.",
    cover: "https://upload.wikimedia.org/wikipedia/en/3/3b/Dark_Side_of_the_Moon.png" 
  },
  { 
    title: "In Rainbows", 
    artist: "Radiohead", 
    rating: 4.5, 
    comment: "Warm, intimate, and complex. 'Weird Fishes' is a rhythm masterpiece.",
    cover: "https://upload.wikimedia.org/wikipedia/en/2/2e/In_Rainbows_Official_Cover.jpg" 
  },
  { 
    title: "Blonde", 
    artist: "Frank Ocean", 
    rating: 5, 
    comment: "Minimalist and raw. The lack of drums makes it feel incredibly personal.",
    cover: "https://upload.wikimedia.org/wikipedia/en/a/a0/Blonde_-_Frank_Ocean.jpeg" 
  },
  { 
    title: "Currents", 
    artist: "Tame Impala", 
    rating: 4, 
    comment: "The basslines on this record are unmatched. Psychedelic pop perfection.",
    cover: "https://upload.wikimedia.org/wikipedia/en/9/9b/Tame_Impala_-_Currents.png" 
  },
   { 
    title: "After Hours", 
    artist: "The Weeknd", 
    rating: 4.5, 
    comment: "Cinematic and dark. Feels like driving through a neon city at 3 AM.",
    cover: "https://upload.wikimedia.org/wikipedia/en/c/c1/The_Weeknd_-_After_Hours.png" 
  },
  { 
    title: "Melodrama", 
    artist: "Lorde", 
    rating: 4, 
    comment: "A brilliant concept album about the solitude of young adulthood.",
    cover: "https://upload.wikimedia.org/wikipedia/en/b/b2/Lorde_-_Melodrama.png" 
  }
];
---

<BaseLayout title="Music Collection">
  <div class="min-h-screen py-24 px-6 bg-slate-50 dark:bg-slate-950">
    
    <div class="max-w-7xl mx-auto">
      
      <header class="mb-12">
        <h1 class="text-5xl font-bold text-slate-900 dark:text-white mb-4 tracking-tight">
          Heavy Rotation
        </h1>
        <p class="text-lg text-slate-500 dark:text-slate-400 max-w-2xl">
          The soundtracks that power my research.
        </p>
      </header>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        
        {albums.map((album) => (
          <div class="group flex flex-col h-full bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 overflow-hidden hover:shadow-xl hover:border-blue-500/30 transition-all duration-300">
            <div class="relative w-full aspect-square overflow-hidden bg-slate-100 dark:bg-slate-800">
              <img 
                src={album.cover} 
                alt={album.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>

            <div class="flex flex-col flex-grow p-5">
              
              <div class="mb-3">
                <h2 class="text-lg font-bold text-slate-900 dark:text-white leading-tight truncate" title={album.title}>
                  {album.title}
                </h2>
                <p class="text-sm font-medium text-slate-500 dark:text-slate-400 truncate">
                  {album.artist}
                </p>
              </div>

              <div class="flex gap-1 mb-3">
                {[...Array(5)].map((_, i) => (
                  <svg 
                    class={`w-4 h-4 ${i < Math.floor(album.rating) ? 'text-amber-400 fill-amber-400' : 'text-slate-200 dark:text-slate-700'}`} 
                    viewBox="0 0 20 20" 
                    fill="currentColor"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              <div class="mt-auto pt-3 border-t border-slate-100 dark:border-slate-800">
                <p class="text-xs text-slate-600 dark:text-slate-300 italic line-clamp-3">
                  "{album.comment}"
                </p>
              </div>

            </div>

          </div>
        ))}

      </div>
    </div>
  </div>
</BaseLayout>