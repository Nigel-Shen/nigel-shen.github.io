---
import BaseLayout from '../layouts/BaseLayout.astro';
import FlowField from '../components/FlowField.astro'; // <--- Re-import this
import BentoGrid from '../components/BentoGrid.astro';
---

<BaseLayout title="Home">
  
  <div class="fixed inset-0 z-0 pointer-events-none transition-colors duration-300">
    <div class="absolute inset-0 mix-blend-multiply dark:mix-blend-normal dark:opacity-40 opacity-60">
       <FlowField />
    </div>
  </div>

  <div class="relative z-10 w-full overflow-y-auto overflow-x-hidden">
    
    <main class="h-screen w-full flex items-center justify-center">
      <div class="max-w-4xl px-6 text-center">
        <h1 class="text-6xl md:text-8xl font-bold tracking-tight pb-2 mb-6 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-teal-400 dark:from-blue-300 dark:to-teal-200">
          Nigel Shen
        </h1>
        
        <p class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 mb-10 max-w-2xl mx-auto leading-relaxed">
          PhD Candidate in <span class="text-blue-600 dark:text-blue-400 font-semibold">Mechanical Engineering & Computation</span> @ Massachusetts Institute of Technology.
          <br>
          Developing high-order numerical methods for fluid dynamics.
        </p>
        
        <div class="flex gap-4 justify-center pointer-events-auto">
          <a href="/research" class="group relative px-8 py-3 bg-blue-600 hover:bg-blue-500 text-white rounded-full font-medium transition-all shadow-lg hover:shadow-blue-500/25">
            Research <span class="inline-block transition-transform group-hover:translate-x-1 ml-1">â†’</span>
          </a>
          <a href="/blog" class="px-8 py-3 border border-slate-300 dark:border-slate-700 hover:border-slate-400 dark:hover:border-slate-500 text-slate-700 dark:text-slate-200 bg-white/50 dark:bg-slate-900/50 backdrop-blur-sm rounded-full font-medium transition-all">
            Blog
          </a>
        </div>
      </div>
    </main>
    
    <BentoGrid />

  </div>
</BaseLayout>