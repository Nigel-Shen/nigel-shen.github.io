---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <article class="min-h-screen py-24 px-6 bg-white dark:bg-slate-950">
    <div class="max-w-3xl mx-auto">
      
      <header class="mb-12 text-center md:text-left">
        <div class="flex items-center justify-center md:justify-start gap-3 mb-4">
           <span class="px-3 py-1 text-xs font-bold tracking-wider uppercase bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 rounded-full">
             {frontmatter.tag || "Blog"}
           </span>
           <span class="text-slate-500 text-sm font-mono">
             {frontmatter.date}
           </span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-slate-900 dark:text-white mb-6 leading-tight">
          {frontmatter.title}
        </h1>
        
        <p class="text-xl text-slate-600 dark:text-slate-400 leading-relaxed italic">
          {frontmatter.description}
        </p>
      </header>

      <hr class="border-slate-200 dark:border-slate-800 mb-12" />

      <div class="prose prose-lg prose-slate dark:prose-invert max-w-none 
                  prose-headings:font-bold prose-headings:text-slate-900 dark:prose-headings:text-white
                  prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-a:no-underline hover:prose-a:underline
                  prose-img:rounded-2xl prose-img:shadow-xl">
        <slot />
      </div>

      <div class="mt-20 pt-10 border-t border-slate-200 dark:border-slate-800">
        <a href="/blog/tech" class="inline-flex items-center gap-2 text-slate-500 hover:text-blue-600 transition-colors font-bold">
          ‚Üê Back to Technical Blog
        </a>
      </div>

    </div>
  </article>
</BaseLayout>